{
  "name": "scriptle",
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "generate:packs": "node scripts/generate-packs-full.js",
    "generate:daily": "python3 scripts/generate-daily-puzzles.py --start-date 2026-01-12 --days 1492 --min-words 5",
    "generate:sitemap": "node scripts/generate-sitemap.js",
    "prerender": "node scripts/prerender.js",
    "generate:build-info": "node scripts/generate-build-info.js",
    "build": "npm run generate:build-info && npm run generate:packs && npm run generate:daily && npm run generate:sitemap && vite build && npm run prerender",
    "build:reddit": "vite build --config vite.reddit.config.js && mv scriptlegame/webroot/reddit.html scriptlegame/webroot/index.html && node scripts/bundle-reddit-data.js",
    "build:reddit:dev": "VITE_DEBUG_MENU=true vite build --config vite.reddit.config.js && mv scriptlegame/webroot/reddit.html scriptlegame/webroot/index.html && node scripts/bundle-reddit-data.js",
    "preview": "vite preview",
    "test": "playwright test",
    "test:unit": "vitest run",
    "test:unit:watch": "vitest",
    "test:unit:coverage": "vitest run --coverage",
    "test:e2e": "playwright test",
    "test:visual": "playwright test tests/visual.spec.js",
    "test:a11y": "playwright test tests/accessibility.spec.js",
    "lint": "eslint src tests scripts",
    "lint:fix": "eslint src tests scripts --fix",
    "validate:data": "node scripts/validate-daily-data.js",
    "validate:build": "node scripts/validate-build.js",
    "generate-data": "python3 parse_all.py",
    "prepare": "husky"
  },
  "devDependencies": {
    "@axe-core/playwright": "^4.10.0",
    "@eslint/js": "^9.17.0",
    "@playwright/test": "^1.57.0",
    "@preact/preset-vite": "^2.10.2",
    "@vitest/coverage-v8": "^2.1.0",
    "eslint": "^9.17.0",
    "eslint-plugin-react": "^7.37.5",
    "husky": "^9.1.7",
    "jsdom": "^25.0.0",
    "puppeteer": "^24.36.1",
    "vite": "^5.4.0",
    "vitest": "^2.1.0"
  },
  "dependencies": {
    "@preact/signals": "^2.6.1",
    "canvas-confetti": "^1.9.4",
    "lucide-preact": "^0.563.0",
    "preact": "^10.28.2",
    "preact-router": "^4.1.2"
  }
}
